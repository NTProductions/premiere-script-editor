<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest
	Version="4.0"
	ExtensionBundleId="com.premiere.script.editor"
	ExtensionBundleVersion="1.0.0"
	ExtensionBundleName="Premiere Script Editor"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<ExtensionList>
		<Extension Id="com.premiere.script.editor.panel" Version="1.0" />
	</ExtensionList>

	<ExecutionEnvironment>
		<HostList>
			<Host Name="PPRO" Version="10.0" />
		</HostList>

	<LocaleList>
		<Locale Code="All" />
	</LocaleList>

	<RequiredRuntimeList>
		<RequiredRuntime Name="CSXS" Version="4.0" />
	</RequiredRuntimeList>
</ExecutionEnvironment>

	<DispatchInfoList>
		<Extension Id="com.premiere.script.editor.panel">
			<DispatchInfo>

			<Resources>
				<MainPath>./index.html</MainPath>
				<ScriptPath>./jsx/aftereffects.jsx</ScriptPath>
				<Parameter>--enable-nodejs</Parameter>
				<Parameter>--mixed-context</Parameter>
				<Parameter>--allow-file-access</Parameter>
				<Parameter>--allow-file-access-from-files</Parameter>
			</Resources>

			<Lifecycle>
				<AutoVisible>true</AutoVisible>
			</Lifecycle>

			<UI>

				<Type>Panel</Type>
				<Menu>Premiere Script Editor</Menu>

				<Geometry>
					<Size>
						<Height>580</Height>
						<Width>400</Width>
					</Size>
				
					
				</Geometry>

			</UI>
		</DispatchInfo>
	</Extension>
</DispatchInfoList>
</ExtensionManifest>
